@model Category;

<section>
    <div class="d-flex align-items-center justify-content-between">

        <h2>Chỉnh sửa danh mục</h2>
    </div>
    <hr />
    <form asp-action="Update" asp-controller="Category" asp-area="Admin" method="POST" class="mt-4">
        <div class="form-group">
            <label for="txtName" class="form-label">Tên danh mục</label>
            <input id="txtName" asp-for="Name" class="form-control" placeholder="Nhập tên danh mục..." />
            <input asp-for="Id" hidden />
        </div>

        <div class="form-group">
            <label for="txtDisplay" class="form-label">Display order</label>
            <input id="txtDisplay" asp-for="DisplayOrder" class="form-control" placeholder="Nhập tên danh mục..." />
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-info">
                Lưu lại
                <i class="bi bi-box-arrow-down"></i>
            </button>
            <a asp-controller="Category" asp-action="Index" asp-area="Admin" class="btn btn-secondary">
                <i class="bi bi-arrow-left-square"></i> Trở về
            </a>
        </div>
    </form>
</section>