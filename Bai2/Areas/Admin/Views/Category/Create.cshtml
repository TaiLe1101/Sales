@model Category;


<section>
    <h4>
        Tạo danh mục
    </h4>
    <hr />
    <form asp-action="Create" asp-controller="Category" asp-area="Admin" method="POST">

        <div class="form-group">
            <label class="form-label">Tên danh mục</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="form-label">Thứ tự</label>
            <input asp-for="DisplayOrder" class="form-control" />
        </div>

        <div class="form-group">
            <button class="btn btn-success">Tạo mới danh mục</button>
            <a asp-action="Index" asp-controller="Category" asp-area="Admin" class="btn btn-secondary">Trở về</a>
        </div>

    </form>
</section>